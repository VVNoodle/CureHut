  <div class="row">
    <div class="col s9">
      <div class="container">
        <h4>Dashboard</h4>
        <div class="divider"></div>

        <!-- MAIN SECTION (JOURNAL ENTRY and JOURNAL HISTORY)-->
        <div class="section">
          <h5>Journal Entry</h5>
          <div class="row">
            <form class="col s12" method="post" action "/portal">
              <div class="row">
                <div class="input-field col s6">
                  <input id="input_text" type="text" data-length="10" name="title">
                  <label for="input_text">Entry Title</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="textarea1" class="materialize-textarea" data-length="120" name="entry"></textarea>
                  <label for="textarea1">Entry</label>
                </div>
              </div>
              <div class="row">
                <div class="col s5">
                  <ul class="pagination">
                    <li class="waves-effect">
                      <a href="#!">
                        <i class="material-icons">mood</i>
                      </a>
                    </li>
                    <li class="waves-effect">
                      <a href="#!">
                        <i class="material-icons">mood</i>
                      </a>
                    </li>
                    <li class="waves-effect">
                      <a href="#!">
                        <i class="material-icons">mood</i>
                      </a>
                    </li>
                    <li class="waves-effect">
                      <a href="#!">
                        <i class="material-icons">mood</i>
                      </a>
                    </li>
                    <li class="waves-effect">
                      <a href="#!">
                        <i class="material-icons">mood</i>
                      </a>
                    </li>
                  </ul>
                </div>
                <div class="col s7">
                  <input class="btn btn-large" type="submit" name="submit" value="Submit" onclick="submitEntry()">
                </div>
              </div>
            </form>
          </div>
        </div>

        <div class="section">
          <h5>Journal History</h5>
          <table>
            <% for(let i=0; i < journals.length; i++) { %>
              <tr>
                <td>
                  <%= journals[i].title %>
                </td>
                <td>
                  <%= journals[i].entry %>
                </td>
              </tr>
              <% } %>
          </table>
        </div>

        <!-- FLOATING BUTTON IN BOT-LEFT-->
        <div class="fixed-action-btn">
          <a href="#top" class="btn-floating btn-large blue">
            <i class="large material-icons">arrow_upward</i>
          </a>
        </div>

        <!-- END OF MAIN SECTION -->
      </div>
    </div>

